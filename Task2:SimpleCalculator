#include<iostream>
using namespace std;
int main()
{
    float a,b,d;
    int c;
    cout<<"Enter any two values :";
    cin>>a>>b;
    cout<<"Enter your choice of operations:\n 1 for addition \n 2 for subtraction\n 3 for multiplication\n 4 for division\n";
    cin>>c;
    switch(c)
    {
        case 1:d=a+b;cout<<"The addition of two given numbers are:"<<d;
        break;
        case 2:d=a-b;cout<<"The difference of two given numbers are:"<<d;
        break;
        case 3:d=a*b;cout<<"The multiplication of two given numbers are:"<<d;
        break;
        case 4:d=a/b;cout<<"result of division of two given numbers is:"<<d;
        default:cout<<"Invalid choice";
    }
    return 0;
}
